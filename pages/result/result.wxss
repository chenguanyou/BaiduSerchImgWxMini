/* pages/result/result.wxss */

.page {
  height: 100%;
  background: #fc4234;
  z-index: 999999;
}

.result_view_root {
  display: flex;
  flex-direction: column;
  vertical-align: middle;
}

.result_baike_view_root {
  flex-direction: column;
  padding-top: 20px;
  padding-left: 20px;
  padding-right: 20px;
  padding-bottom: 20px;
  background: #fff;
}

.baike_centent {
  font-size: 27rpx;
  text-align: justify;
  padding-top: 20px;
  padding-bottom: 20px;
}

.baike_video video {
  width: 100%;
  align-content: center;
  margin: 0 auto;
  align-items: center; /**子view垂直居中*/
  vertical-align: middle; /**垂直居中*/
  justify-content: center; /**内容居中*/
  flex-direction: row;
}

.baike_images {
  width: 100%;
}

.baike_images image {
  width: 100%;
  align-content: center;
  vertical-align: middle;
  margin: 0 auto;
  margin-bottom: 10px;
}

.baohan_images {
  background: #fc4234;
  color: #fff;
  padding-top: 20px;
  padding-bottom: 20px;
  padding-left: 10px;
  font-size: 20px;
  font-weight: 200;
}

.baohan_images_data {
  display: flex;
  flex-direction: row;
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 10px;
  padding-bottom: 10px;
  font-size: 13px;
  word-break: break-all;
  background: #fff;
}

.baohan_images_data image {
  width: 100px;
  /* height:120px; */
  line-height: 100rpx;
  justify-content: center;
}

.baohan_images_data text {
  font-size: 13px;
  word-break: break-all;
}

.baohan_images_img {
  padding-right: 10px;
  padding-top: 10px;
}

.tesult_titles {
  display: flex;
  flex-direction: row;
  padding: 20px;
  background: #fc4234;
  border-bottom: 1px solid #fff;
}

.tesult_titles_image {
  width: 250rpx;
  height: 250rpx;
  margin-right: 20px;
}

.tesult_titles_image image {
  width: 250rpx;
  height: 250rpx;
}

.tesult_titles_text_title {
  color: #fff;
  width: 50%;
  /* text-align: center; */
  align-items: center;
  align-content: center;
  vertical-align: middle;
}

.tesult_titles_text_title view {
  font-size: 27rpx;
  padding-top: 10px;
  font-weight: 200;
}

.tesult_titles_text_title text {
  font-weight: 200;
  padding-top: 20px;
  font-size: 20px;
  text-align: center;
  vertical-align: middle;
  margin-right: 20rpx;
}

/* 分享 */

.share-btn {
  color: #fff;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  bottom: 20rpx;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  font-size: 28rpx;
  z-index: 999999;
}

.share-btn image {
  width: 100rpx;
  height: 100rpx;
}

.sharesvc {
  display: flex;
  flex-direction: row;
  position: fixed;
  justify-content: center;
  text-align: center;
  align-items: center;
  margin: 0 auto;
}

.sharesvc canvas {
  color: #fff;
  position: fixed;
  text-align: center;
  align-items: center;
  margin: 0 auto;
}

.sharing_view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.save_shareing_image {
  z-index: 999999999;
  border-radius: 15rpx;
  background: #eb4901;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  text-align: center;
  align-items: center;
  margin: 0 auto;
  bottom: 40rpx;
  position: fixed;
}

.save_shareing_images {
  z-index: 999999999;
  border-radius: 15rpx;
  align-items: center;
  margin: 0 auto;
  position: fixed;
  top: 0;
}

.save_shareing_image text {
  color: #fff;
  font-weight: 500;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.8;
}
